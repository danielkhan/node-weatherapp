                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            img(src='/images/ruxitLogo.svg')

                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav




        block content


        if (tpl != 'medium' && tpl != 'small')
            footer.footer
                .container
                    .text-muted
                        | &copy;
                        | #{moment().format('YYYY')} &nbsp;
                        a(href="http://dynatrace.com/")
                            img(alt="Dynatrace Logo", src="/images/dynatrace_web.png")

        script(src='/javascripts/bootstrap.min.js')
