doctype html
html
    head
        title= title

        meta(name="viewport", content="width=device-width")
        link(rel="shortcut icon", href="/favicon.ico")

        link(rel='stylesheet', href='/stylesheets/style.css')

        if (tpl == 'medium')
            link(rel='stylesheet', href='/stylesheets/weather_medium.css')
        else if (tpl == 'small')
            link(rel='stylesheet', href='/stylesheets/weather_small.css')
        else
            link(rel='stylesheet', href='/stylesheets/weather.css')
    body


        if (tpl != 'medium' && tpl != 'small')
            nav.navbar.navbar-inverse.navbar-fixed-top
                .container
                    .navbar-header
